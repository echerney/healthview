<!DOCTYPE html>
<html>
<head>
<% include ../partials/head %>
</head>
<body>
  <% include ../partials/userbar %>
  <p>Name: <%= patientInfo.name %></p>
  <p>Phone: <%= patientInfo.phone %></p>
  <p>Diagnosis: <%= patientInfo.diagnosis %></p>
  <p>Appointments:</p>
  <% if (patientInfo.appointments) {patientInfo.appointments.forEach(function(appt){ %>
    <p><%= appt %></p>
  <% })} %>
  <p>Notes:</p>
  <% if (patientInfo.notes) {patientInfo.notes.forEach(function(note){ %>
    <p><%= note %></p>
  <% })} %>
  <button id="schedule-button">Schedule an Appointment</button>
  <div class="schedule-modal">
    <div class="schedule-modal-content">
      <span class="schedule-close">x</span>
      <h3>Schedule appointment for <%= patientInfo.name %></h3>
      <form id="schedule-form" action="" method="">
        <label for="">Date:</label>
        <input id="schedule-date" type="text" name="appointment">
        <input type="submit" class="button" value="Make an Appointment">
      </form>
    </div>
  </div>
</body>
</html>
